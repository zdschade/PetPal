<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".ui.dashboard.pages.managepets.ManagePetsPage">

    <!-- TODO: Update blank fragment layout -->
    <Button
        android:id="@+id/add_pet_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="25dp"
        android:padding="10dp"
        android:background="@drawable/carousel_item_bg"
        android:text="Add Pet" />

    <Button
        android:id="@+id/remove_pet_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="25dp"
        android:padding="10dp"
        android:background="@drawable/carousel_item_bg"
        android:text="Remove Pet" />

    <Button
        android:id="@+id/modify_pet_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="25dp"
        android:padding="10dp"
        android:background="@drawable/carousel_item_bg"
        android:text="Modify Pet" />

</LinearLayout>